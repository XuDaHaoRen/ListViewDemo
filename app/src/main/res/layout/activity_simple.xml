<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="activity.xbl.com.listviewdemo.SimpleActivity">

    <ListView
        android:id="@+id/simple_lv"
        android:layout_width="match_parent"
        android:divider="@android:color/darker_gray"
        android:dividerHeight="10dp"
        android:scrollbars="@null"
        android:layout_height="450dp"/>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="450dp"
        android:id="@+id/simple_datanull_iv"
        android:background="@drawable/img"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <Button
            android:id="@+id/simple_refresh_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="点击按钮数据更新"
            />
        <Button
            android:id="@+id/simple_getname_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="lv中所有item控件名称"
            />

    </LinearLayout>


</LinearLayout>
